<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
               android:paddingLeft="@dimen/panding_18" 
             android:paddingRight="@dimen/panding_18"
                   android:focusable="true"  
   android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/new_pwd"
                style="@style/common_input"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:hint="@string/new_password_hit"
                android:inputType="textPassword"
                android:textSize="@dimen/textsize_30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/continue_pwd"
                style="@style/common_input"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:hint="@string/re_password_hit"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_out" />
    </LinearLayout>

    <Button
        android:id="@+id/find_reset_button"
        style="@style/AppBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="41dp"
        android:text="@string/btn_sub_hit" />

</LinearLayout><!-- From: file:/E:/GitHub/mangrovepay/res/layout/re_password.xml -->