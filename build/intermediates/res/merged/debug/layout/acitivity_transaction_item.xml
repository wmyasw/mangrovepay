<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="18dp" >

    <RelativeLayout
        android:id="@+id/rl_pay_channel"
        android:layout_width="match_parent"
        android:layout_height="58dp"
             android:paddingRight="18dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tx_channel_code"
            style="@style/st_text_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text=""
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_type"
                style="@style/st_text_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_gray_value"
                android:textSize="@dimen/textsize_26" />
        </LinearLayout>

        <TextView
            android:id="@+id/tx_last_cardno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout1"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:text=""
            android:textColor="@color/text_gray_value"
            android:textSize="@dimen/textsize_26" />

        <TextView
            android:id="@+id/tx_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tx_last_cardno"
            android:layout_alignBottom="@+id/tx_last_cardno"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:text=""
            android:textColor="@color/text_gray_value"
            android:textSize="@dimen/textsize_28" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/E:/GitHub/mangrovepay/res/layout/acitivity_transaction_item.xml -->