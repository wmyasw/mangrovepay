<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
              android:focusable="true"  
   android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/panding_18" >

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/find_account"
                style="@style/common_input"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/find_valitation"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_account"
                android:hint="@string/register_name_hit"
                android:inputType="number"
                android:textSize="@dimen/textsize_30"
                android:visibility="visible" />

            <Button
                android:id="@+id/find_valitation"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@null"
                android:clickable="true"
                android:text="@string/check_hit"
                android:textColor="@color/btn_txt_blue_bg"
                android:textSize="@dimen/textsize_28" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/find_security_code"
                style="@style/common_input"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="@string/check_msg_hit"
                android:inputType="number" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_out" />
    </LinearLayout>

    <Button
        android:id="@+id/find_next_button"
        style="@style/AppBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="41dp"
        android:enabled="false"
        android:text="@string/btn_next_hit" />

</LinearLayout><!-- From: file:/E:/GitHub/mangrovepay/res/layout/find_password_check.xml -->