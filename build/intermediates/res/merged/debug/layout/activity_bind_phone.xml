<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- +++++++++注册信息++++++++++++++++++++++++++++++++++++ -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/panding_18"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/bind_phone"
                style="@style/common_input"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/bind_phone_valitation"
                android:drawableLeft="@drawable/ic_account"
                android:hint="@string/bind_phone_hit"
                android:inputType="number"
                android:textSize="@dimen/textsize_30" />

            <Button
                android:id="@+id/bind_phone_valitation"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:text="@string/check_hit"
                android:textColor="@color/btn_txt_blue_bg"
             android:layout_marginRight="18dp"
                android:textSize="@dimen/textsize_28" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_in" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal" >

            <com.jdjt.mangrovepay.view.ClearEditText
                android:id="@+id/bind_phone_valid_code"
                style="@style/common_input"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="@string/check_msg_hit"
                android:inputType="number" >

                <requestFocus />
            </com.jdjt.mangrovepay.view.ClearEditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_out" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_bind_phone"
        style="@style/AppBtn"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/panding_18"
        android:layout_marginTop="41dp"
        android:text="@string/btn_next_hit" />

</LinearLayout><!-- From: file:/E:/GitHub/mangrovepay/res/layout/activity_bind_phone.xml -->